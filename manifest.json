{
  "manifest_version": 3,
  "name": "Netflix 4K",
  "version": "1.1.0",
  "description": "Fixes Netflix's broken capability detection to unlock 4K on capable setups",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix 4K"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*.netflix.com/*"]
    }
  ]
}
